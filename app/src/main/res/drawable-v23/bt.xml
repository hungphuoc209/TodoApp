<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="40dp"
        android:height="40dp">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#FF5A5A"/>
            <corners
                android:radius="10dp"/>
        </shape>

    </item>

    <item
        android:width="8dp"
        android:height="28dp"
        android:gravity="center">
        <shape>
            <solid
                android:color="#FFF"/>
        </shape>
    </item>
    <item
        android:height="8dp"
        android:width="28dp"
        android:gravity="center">
        <shape>
            <solid
                android:color="#FFF"/>
        </shape>
    </item>
</layer-list>